    <p class="p-font-title">投稿していただいた方</p>
    <p class="card-text p-font">
        <% for(let vote of votes) { %>
            <%= vote.username %> /
                <% } %>
    </p>
    <div class="mt-1 text-center p-font">
        <p>
            <%= votes.length %>人
        </p>
    </div>
    <div class="mt-1 text-center">
        <a class="join-link m-auto" href="/" >ホームに戻る</a>
    </div>
</div>
</div>